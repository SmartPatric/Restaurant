<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.my.restaurant.filters.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/**</url-pattern>
  </filter-mapping>

  <listener>
    <listener-class>
      com.my.restaurant.listeners.SessionListener
    </listener-class>
  </listener>

  <servlet>
    <servlet-name>ServletMain</servlet-name>
    <servlet-class>com.my.restaurant.controllers.Servlet</servlet-class>
    <!--<load-on-startup>1</load-on-startup>-->
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletMain</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>error.jsp</location>
  </error-page>


</web-app>
